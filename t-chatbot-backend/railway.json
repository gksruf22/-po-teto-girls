{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "providers": ["java"],
      "phases": {
        "setup": {
          "nixPkgs": ["jdk21", "gradle"]
        },
        "build": {
          "cmds": ["./gradlew clean bootJar"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -Dspring.profiles.active=prod -jar build/libs/*.jar"
  }
}
